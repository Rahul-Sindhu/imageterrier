<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.imageterrier</groupId>
	<artifactId>imageterrier-master</artifactId>
	<packaging>pom</packaging>
	<version>3.0.1-SNAPSHOT</version>
	<name>The ImageTerrier Master Project</name>
	<modules>
		<module>ImageTerrier</module>
		<module>ImageTerrierTools</module>
		<module>HadoopImageTerrier</module>
	</modules>
	<build>
		<plugins>
			<plugin>
				<groupId>com.mycila.maven-license-plugin</groupId>
				<artifactId>maven-license-plugin</artifactId>
				<version>1.9.0</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.1</version>
				<configuration>
					<autoVersionSubmodules>true</autoVersionSubmodules>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<distributionManagement>
		<repository>
			<id>octopussy</id>
			<name>Octopussy Maven Releases Repository</name>
			<url>http://octopussy.ecs.soton.ac.uk/m2/releases</url>
		</repository>
	</distributionManagement>
	<scm>
		<connection>scm:svn:svn://svn.code.sf.net/p/imageterrier/code/trunk</connection>
		<developerConnection>scm:svn:svn+ssh://svn.code.sf.net/p/imageterrier/code/trunk</developerConnection>
		<url>https://sourceforge.net/p/imageterrier/code</url>
	</scm>
</project>
